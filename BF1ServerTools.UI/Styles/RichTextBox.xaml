<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="RichTextBoxStyle_Normal" TargetType="{x:Type RichTextBox}">
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="IsDocumentEnabled" Value="True" />
        <Setter Property="Cursor" Value="Arrow" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="VerticalScrollBarVisibility" Value="Disabled" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style x:Key="ParagraphStyle_H18" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="LineHeight" Value="10" />
    </Style>

    <Style x:Key="ParagraphStyle_H16" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="LineHeight" Value="10" />
    </Style>

    <Style x:Key="ParagraphStyle_H14" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="LineHeight" Value="10" />
    </Style>

    <Style x:Key="ParagraphStyle_Content" TargetType="{x:Type Paragraph}">
        <Setter Property="LineHeight" Value="10" />
    </Style>

</ResourceDictionary>